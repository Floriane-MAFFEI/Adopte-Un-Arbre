{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <h1>Project</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ project.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ project.description }}</td>
            </tr>
            <tr>
                <th>Localization</th>
                <td>{{ project.localization }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ project.stock }}</td>
            </tr>
            <tr>
                <th>Start_at</th>
                <td>{{ project.startAt ? project.startAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Evolution</th>
                <td>{{ project.evolution }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ project.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_project_index') }}">back to list</a>

    <a href="{{ path('app_back_project_edit', {'id': project.id}) }}">edit</a>

    {{ include('back/project/_delete_form.html.twig') }}
{% endblock %}
